@model Cosmetics.ViewModels.Catalogs.Products.Manage.ProductUpdateRequest
@using CosmeticsShop.Data.Enums;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container-fluid">
    <h1 class="mt-4">Product</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Product">Product List</a></li>
        <li class="breadcrumb-item active">Product Details</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between">
            <a asp-action="Index" asp-controller="Product" class="btn btn-outline-dark">Back to product list</a>
            <div>
                <label class="m-0 btn btn-outline-dark d-flex align-items-center justify-content-center" for="updateProductBtnForm">
                    <i class="far fa-save mr-2"></i>
                    Save
                </label>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Update" enctype="multipart/form-data" method="post" id="productUpdateForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="Id" type="hidden" />
                <div class="row">
                    <div class=" col-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class=" col-6">
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class=" d-flex justify-content-between form-group">
                            <div style="flex:3">
                                <label asp-for="OriginalPrice" class="control-label"></label>
                                <input asp-for="OriginalPrice" class="form-control" />
                                <span asp-validation-for="OriginalPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group ml-2 py-1" style="flex:1">
                                <label asp-for="ForGender" class="control-label"></label>
                                @{
                                var genders = new List<SelectListItem>
                                    () {
                                    new SelectListItem{Value= "1", Text= "Male", Selected = Model.ForGender == ForGender.Male},
                                    new SelectListItem{Value= "2", Text="Female", Selected = Model.ForGender == ForGender.Female },
                                    new SelectListItem{Value= "3", Text="Both", Selected = Model.ForGender == ForGender.Both}
                                    };
                                    }
                                    <div>
                                        <select class="form-select p-1 w-100" aria-label="Default select example" asp-for="ForGender" asp-items="genders">
                                        </select>
                                    </div>
                                    <span asp-validation-for="ForGender" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="ThumbnailImage" class="control-label"></label>
                            <div class="custom-file">
                                <input accept="image/" asp-for="ThumbnailImage" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile">Edit thumbnail</label>
                            </div>
                            <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6 ">
                        <div class="form-group">
                            <label asp-for="Categories" class="control-label"></label>
                            @Html.HiddenFor(x => x.Id)
                            <div class="">
                                @Html.ListBoxFor(model => model.SelectedId, new MultiSelectList(Model.CategoriesAssignRequest, "Id", "Name"), new { id = "multiSelectDropDown", multiple = "multiple" })
                            </div>
                            <span asp-validation-for="SelectedId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class=" col-6">
                        <div class="form-group">
                            <label asp-for="Stock" class="control-label"></label>
                            <input asp-for="Stock" class="form-control" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                    </div>
                    <div class=" col-6">
                        <div class="form-group">
                            <label asp-for="DateCreated" class="control-label"></label>
                            <input asp-for="DateCreated" class="form-control" disabled />
                            <span asp-validation-for="DateCreated" class="text-danger"></span>
                        </div>
                    </div>
                    <div class=" col-6">
                        <div class="form-group">
                            <label asp-for="ViewCount" class="control-label"></label>
                            <input asp-for="ViewCount" class="form-control" disabled />
                            <span asp-validation-for="ViewCount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class=" col-6">
                        <div class="form-group">
                            <label asp-for="OriginalCountry" class="control-label"></label>
                            <input asp-for="OriginalCountry" class="form-control" />
                            <span asp-validation-for="OriginalCountry" class="text-danger"></span>
                        </div>
                    </div>
                    <div class=" col-6">
                        <div class="form-group">
                            <label asp-for="Details" class="control-label"></label>
                            <textarea rows="3" id="productDetails" asp-for="Details" class="form-control"></textarea>
                            <span asp-validation-for="Details" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="  col-6">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea rows="3" id="productDescription" asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" id="updateProductBtnForm" class="d-none" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {

    <script src="https://cdn.ckeditor.com/ckeditor5/27.0.0/classic/ckeditor.js"></script>
    <script>
            ClassicEditor
                .create(document.querySelector('#productDetails'))
                .then(editor => {
                    console.log(editor);
                })
                .catch(error => {
                    console.error(error);
                });
            ClassicEditor
                .create(document.querySelector('#productDescription'))
                .then(editor => {
                    console.log(editor);
                })
                .catch(error => {
                    console.error(error);
                });
    </script>
    <script type="text/javascript">
            // Add the following code if you want the name of the file appear on select
            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });
    </script>
    <script type="text/javascript" src="~/js/chosen.jquery.min.js"></script>

    <script>
            $('#updateProductBtnForm').on('Click').submit();

            const handleOnChange = () => {
