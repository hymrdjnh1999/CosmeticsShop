@using Cosmetics.ViewModels.Systems.Users;
@model LoginRequest
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login</title>
    <link href="/css/styles.css" rel="stylesheet" />
    <link href="/css/customStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="bg-dark">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5 col-md-9">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header border-bottom-0">
                                    <h3 class="text-center font-weight-bold my-4 text-capitalize color-a64bf4">Welcome Admin!</h3>
                                </div>
                                <div class="card-body px-5">
                                    <form asp-action="Index" asp-controller="Login" method="post">
                                        <div class="form-group position-relative">
                                            <label class="small mb-1 font-weight-bolder display-2">User Name</label>
                                            <input class="form-control border border-0 rounded-pill btn-outline-light pl-5 py-4 border-bottom-2" asp-for="UserName" type="text" placeholder="Enter user name" />
                                            <span class="focus-input user"></span>
                                        </div>
                                        <div class="form-group position-relative">
                                            <label class="small mb-1 font-weight-bolder display-2" for="inputPassword">Password</label>
                                            <input class="form-control border border-0 rounded-pill btn-outline-light pl-5 py-4 border-bottom-2" asp-for="Password" type="password" placeholder="Enter password" />
                                            <span class="focus-input pass"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox d-none">
                                                <input class="custom-control-input" asp-for="RememberMe" type="checkbox" />
                                            </div>
                                        </div>
                                        <div class="form-group d-flex align-items-center justify-content-center  mt-4 mb-0">
                                            <button class="form-control btn font-weight-bold text-white text-uppercase rounded-pill bg-dark " type="submit">Login</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="small">Contact admin</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Comestic 2021</div>
                        <div>
                            <a href="#">Privacy Policy</a> &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>
</body>
</html>
