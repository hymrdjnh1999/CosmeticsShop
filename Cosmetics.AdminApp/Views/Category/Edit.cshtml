@model Cosmetics.ViewModels.Catalogs.Categories.CategoryUpdateRequest

@{
    ViewData["Title"] = "Cập nhật danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Danh mục</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Category">Danh sách danh mục</a></li>
        <li class="breadcrumb-item active">Cập nhật danh mục</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between">
            <a asp-action="Index" asp-controller="Category" class="btn btn-outline-dark">Quay lại danh sách danh mục</a>
            <div>
                <label class="m-0 btn btn-outline-dark d-flex align-items-center justify-content-center" for="updateCategoryBtn">
                    <i class="far fa-save mr-2"></i>
                    Cập nhật
                </label>
            </div>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <form asp-action="Edit" id="editCategoryForm" method="post" asp-controller="Category">
                <input asp-for="Id" type="hidden" class="form-control" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" id="categoryName" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="" id="updateCategoryBtn" class="d-none btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
