@model Cosmetics.ViewModels.Catalogs.Categories.CategoryCreateRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="mt-4">Products</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Category">Danh Sách Danh Mục</a></li>
        <li class="breadcrumb-item active">Tạo Mới Danh Mục</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between">
            <a asp-action="Index" asp-controller="Category" class="btn btn-outline-dark"><i class="fas fa-chevron-left back-list-product mr-2"></i>Về danh sách danh mục</a>

        </div>
        <div class="card-body">
            <div>
                <form asp-action="Create" class="d-flex flex-column">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label offset-3">Tên</label>
                        <input asp-for="Name" class="form-control col-6 offset-3" placeholder="Tên danh mục..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SortOrder" class="control-label offset-3">Thứ Tụ Sắp Xếp</label>
                        <input asp-for="SortOrder" class="form-control col-6 offset-3" placeholder="thứ tự..."/>
                        <span asp-validation-for="SortOrder" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-center">
                        <input type="submit" value="Tạo" class="btn btn-dark px-5" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
