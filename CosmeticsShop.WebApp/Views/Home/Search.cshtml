                                    <input type="text" name="Keyword" class="border-0  pr-5" placeholder="nhập từ khóa" value="@request.Keyword" />
                                    <input type="text" name="CategoryId" value="@request.CategoryId" hidden class="d-none" />
                                    <input type="text" name="PriceStart" hidden value="@request.PriceStart" class="d-none" />
                                    <input type="text" name="PriceEnd" hidden value="@request.PriceEnd" class="d-none" />
                                    <input type="text" name="SortPrice" value="@request.SortPrice" hidden class="d-none" />
                                    <input type="text" name="Gender" hidden value="@request.Gender" />

                                </div>
                                <button type="submit" id="form_input_keyword_Search" class="btn position-absolute btn-submit-search btn-search-color" style="height: 34px; padding: 0 15px; min-width: 60px; max-width: 190px; "><i class="search-btn-icon fa fa-search" aria-hidden="true"></i></button>
                            </form>

                        </div>
                    </div>
                </div>
