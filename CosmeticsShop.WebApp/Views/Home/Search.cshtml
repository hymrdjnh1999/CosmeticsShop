                    <div class="d-flex">

                        @foreach (var item in category)
                        {
                            if (item.CategoryId == request.CategoryId)
                            {
                                name = item.CategoryName;
                            }
                        }
                        @if (request.Keyword != null || request.CategoryId != null || request.Gender != null)
                        {
                            <div>Kết quả tìm kiếm cho :</div>
                            <div class="ml-2">

                            @if (request.Keyword != null)
                            {
                                <div class="search-result-header_text p-0 mb-1" > từ khoá '<span class="search-result-header_text-highlight" style="color: rgb(238, 77, 45); font-weight: 400;">@request.Keyword</span>'</div>
                            }
                            @if (request.CategoryId != null)
                            {
                                <div class="search-result-header_text p-0 mb-1" >danh mục '<span class="search-result-header_text-highlight" style="color: rgb(238, 77, 45); font-weight: 400;">@name</span>'</div>
                            }
                            @if (request.Gender == 1)
                            {
                                gender = "Nam";
                            }
                            else if (request.Gender == 2)
                            {
                                gender = "Nữ";
                            }
                            else if (request.Gender == 3)
                            {
                                gender = "Cả hai";
                            }
                            @if (request.Gender != null)
                            {
                                <div class="search-result-header_text p-0 mb-1" >giới tính '<span class="search-result-header_text-highlight" style="color: rgb(238, 77, 45); font-weight: 400;">@gender</span>'</div>
                            }
                            </div>
                        }



                    </div>
                </div>


            </div>
            <div class="sort-bar">
                <span class="sort-bar_label">Sắp xếp theo</span>
                <div class="sort-by-options">
                    @*<div class="sort-by-options_option">Mới nhất</div>*@
                    <div class="d-flex">
                        <form action="Search" method="Get" class="d-flex align-items-center">
                            <input type="text" name="Keyword" class="border-0  pr-5" hidden value="@request.Keyword" />
                            <input type="text" name="CategoryId" value="@request.CategoryId" hidden />
                            <input type="text" name="PriceStart" hidden value="@request.PriceStart" />
                            <input type="text" name="PriceEnd" hidden value="@request.PriceEnd" />
                            <div class="d-flex align-items-center">
                                <button type="submit" name="SortPrice" value="1" class="sort-by-options_option">Giá: Thấp đến Cao</button>
                                <button type="submit" name="SortPrice" value="2" class="sort-by-options_option">Giá: Cao đến Thấp</button>
                            </div>
                            <input type="text" name="Gender" hidden value="@request.Gender" />
                        </form>

                    </div>
                    <div class="d-flex">
                        <form action="Search" method="Get" class="d-flex align-items-center">
                            <input type="text" name="Keyword" class="border-0  pr-5" hidden value="@request.Keyword" />
                            <input type="text" name="CategoryId" value="@request.CategoryId" hidden />
                            <input type="text" name="PriceStart" hidden value="@request.PriceStart" />
                            <input type="text" name="PriceEnd" hidden value="@request.PriceEnd" />
                            <input type="text" name="SortPrice" hidden value="@request.SortPrice" />
                            <span class="sort-bar_label ml-5">Giới tính </span>
                            <div class="d-flex ">
                                <button type="submit" name="Gender" value="1" class="sort-by-options_option">Nam</button>
                                <button type="submit" name="Gender" value="2" class="sort-by-options_option">Nữ</button>
                                <button type="submit" name="Gender" value="3" class="sort-by-options_option">Cả Hai</button>
                            </div>
                        </form>
                    </div>
