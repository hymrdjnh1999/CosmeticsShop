@model Cosmetics.ViewModels.Systems.Clients.ClientUpdateViewModel;
@{
    ViewData["Title"] = "AccountInfor";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var cart = ViewBag.Cart;
    var imgUrlBase = "https://localhost:5001/user-content/";
}


<div id="pageContainer">
    <main class="main-contentAccount">
        <div class="wrapperAccount">
            <div class="inner">
                <div class="grid mg-left-110">
                    <div class="grid__item one-whole pd-left110">
                        <h2>Xin chào, @Model.Name</h2>
                    </div>
                    <div class="grid__item one-quarter pd-left110">
                        <ul class="no-bullets">
                            <li><a href="#">Thông tin tài khoản</a></li>
                            <li><a href="#">Lịch sử đơn hàng</a></li>
                        </ul>
                    </div>
                    <div class="grid__item three-quarters pd-left110 br-right">
                        @*<h2 class="h4 hide">customer.account.details</h2>*@
                        <div class="form-group">
                            <div class="form-group">
                                <label class="label d-block">Họ tên</label>
                                <input class="input" style="border: none;" type="text" placeholder="Nhập họ tên" value="@Model.Name">
                            </div>
                            <div class="form-group">
                                <label class="label d-block">Email</label>
                                <input class="input border-0" disabled type="email" asp-for="Email" >
                            </div>
                            <div class="form-group">
                                <label class="label d-block">Mật khẩu cũ</label>
                                <input class="input" style="border: none;" type="password" asp-for="OldPassword" placeholder="Nhập mật khẩu cũ">
                                <span class="text-danger" asp-validation-for="OldPassword"></span>
                            </div>
                            <div class="form-group">
                                <label class="label d-block">Mật khẩu mới</label>
                                <input class="input" style="border: none;" type="password" asp-for="NewPassword" placeholder="Mật khẩu phải có ít nhất 1 ký tự đặc biệt, 1 chữ hoa ,1 chữ số và chữ thường">
                                <span class="text-danger" asp-validation-for="NewPassword"></span>
                            </div>
                            <div class="form-group">
                                <label class="label d-block">Nhập lại mật khẩu</label>
                                <input class="input" style="border: none;" type="password" asp-for="RepeatPassword" placeholder="Nhập lại mật khẩu mới">
                                <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                            </div>
                            <div class="form-group">
                                <div class="sectionFooter_From form__Submit">
                                    <div class="wrapper" style="width: 176px;">
                                        <a href="#" id="loginSubmitBtn" class="justify-content-center text-center align-items-center"><span>CẬP NHẬT</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
