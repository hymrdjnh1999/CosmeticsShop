
@{
    ViewData["Title"] = "Your Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main">
    <div class="container">
        <div class="pageHeader">
            <div class="sectionHeader justify-content-center text-center">
                <h1 style="font-size: 24px; letter-spacing: 2px;">Giỏ Hàng Của Bạn</h1>
            </div>
        </div>
        <div class="pageContent">
            <form action="#" method="POST" class="">
                @* ảnh sp *@
                <div class="cart__ItemList">
                    <div class="cart__head" style="font-size: 13px;">
                        <span class="cart__HeadItem text--subdued" style="width: 120px;">Sản Phẩm</span>
                        <span class="cart__HeadItem" style="width:425px; height: 25px;"></span>
                        <span class="cart__HeadItem text--subdued" style="text-align: center;">Số Lượng</span>
                        <span class="cart__HeadItem text--subdued" style="text-align: right;">Tổng Cộng</span>
                    </div>
                </div>
                @* Tên sp *@
                <div class="cart_Item">
                    <div class="d-flex">
                        <div class="cartItem__imageWrapper ">
                            <div class="aspectRatio">
                                <a href="#">
                                    <img style="width: 120px;" src="~/images/SpDetail.webp" alt="Alternate Text" />
                                </a>
                            </div>
                        </div>
                        <div class="cartItem__Info">
                            <h2 class="cartItem__Title">
                                <a href="#">[NEW] Carolina Herrera 212 Heroes EDT</a>
                            </h2>
                            <div class="cartItem__Meta text--subdued">
                                <p class="cartItem__Variant">50ml + Body Spray 50ml + Móc Khoá</p><div class="cartItem__PriceList"><span class="cartItem__Price" data-money-convertible="">2.050.000 VND</span></div>
                            </div>
                        </div>
                    </div>
                    @* Option số lượng *@
                    <div class="cartItem__Actions" style=" text-align: center; width: 210px;">
                        <div class="cartItem__QuantitySelector">
                            <div class="quantitySelector">
                                <span class=" quantitySelector__Button" data-action="increase-quantity">
                                    <img style="width: 11px;" src="~/images/icons8-subtract-24.png" alt="Alternate Text" />
                                </span>
                                <input type="text" class="quantitySelector__CurrentQuantity" pattern="[0-9]*" name="quantity" value="1">
                                <span class=" quantitySelector__Button" data-action="increase-quantity">
                                    <img style="width: 11px;" src="~/images/icons8-addtion.png" alt="Alternate Text" />
                                </span>
                            </div>
                        </div>
                        <a href="#" class="cartItem__Remove link--underline" data-action="remove-item">Xóa</a>
                    </div>
                    <div class="cartItem__Actions" style="text-align: right; width: 245px;">
                        <span class="cartItem__LinePrice text--subdued text-align-end" data-money-convertible="">2.050.000 VND</span>
                    </div>
                </div>
                <div class="cart__Footer">
                    <div class="cart__NoteContainer">
                        <span>Ghi chú:</span>
                        <textarea class="cart__Note form__Textarea" style="color: #cfa247;" name="note" id="cart-note" rows="4" placeholder="Nếu quý khách có yêu cầu xuất hoa đơn, vui lòng điền thông tin vào đây, PARIS FRANCE BEAUTY sẽ giao sản phẩm kèm với hóa đơn cho quý khách. Ngoài ra, nếu quý khách có thêm yêu cầu hay ý kiến gì vui lòng điền vào đây. Cám ơn quý khách!"></textarea>
                    </div>
                    <div class="cart__Recap">
                        <span class="cart__Total" style="text-align: right;">
                            Tổng cộng: <span data-money-convertible="">
                                <span class="saso-cart-original-total">2.050.000 VND</span></br>
                                <span class="saso-cart-total"></span>
                            </span>
                        </span>
                        <span class="cart__Taxes text--subdued">Giá đã bao gồm thuế VAT và phí giao hàng miễn phí</span> </br>
                        <div class="sectionFooter__cart">
                            <div class="wrapper">
                                <a href="#" class="justify-content-center text-center"><span>CHECKOUT</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
